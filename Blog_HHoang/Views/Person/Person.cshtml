@using Blog_HHoang.Models
@model List<Entry>
@{
    ViewBag.Title = "Person";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="banner-inner">
</div>
<ol class="breadcrumb">
    <li class="breadcrumb-item">
        <a href="index.html">Trang Chủ</a>
    </li>
    <li class="breadcrumb-item active">Trang Cá Nhân</li>
</ol>
<section class="main-content-w3layouts-agileits">
    <div class="container">
        <h3 class="tittle">Bài Viết Của Tôi</h3>
        <div class="inner-sec">
            <!--left-->
            <div class="left-blog-info-w3layouts-agileits text-left">
                <div class="row">
                    @{
                        foreach (var item in Model)
                        {
                            <div class="col-lg-4 card">
                                <a href="@Url.Action("detail","Person",new { @ma = item.id_Entry})">
                                    <img src="@Url.Content("~/Content/images/" + item.UrlImg)" class="card-img-top img-fluid" alt="">
                                </a>
                                <div class="card-body">
                                    <ul class="blog-icons my-4">
                                        <li>
                                            <a href="#">
                                                <i class="far fa-calendar-alt"></i> @item.dates
                                            </a>
                                        </li>
                                        <li class="mx-2">
                                            <a href="#">
                                                <i class="far fa-comment"></i> 21
                                            </a>
                                        </li>
                                        <li>
                                            <a href="#">
                                                <i class="fas fa-eye"></i> 2000
                                            </a>
                                        </li>

                                    </ul>
                                    <h5 class="card-title">
                                        <a href="single.html">@item.Title</a>
                                    </h5>
                                    <p class="card-text mb-3" >@item.content1</p>
                                    <a href="@Url.Action("detail","Person",new { @ma = item.id_Entry})" class="btn btn-primary read-m">Chi Tiết</a>
                                </div>
                            </div>
                        }
                    }
                </div>
                <!--//left-->
            </div>
        </div>
    </div>
</section>