@using Blog_HHoang.Models
@model List<Entry>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="banner">
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
        </ol>
        <div class="carousel-inner" role="listbox">
            <div class="carousel-item active">
                <div class="carousel-caption">
                    <h3>
                        Nếu Bạn Đứng Yên
                        <span> Bạn Sẽ Chết...</span>
                    </h3>

                </div>
            </div>
            <div class="carousel-item item2">
                <div class="carousel-caption">
                    <h3>
                        Cuộc sống quan trọng nhất
                        <span>Là sự lựa chọn</span>
                    </h3>

                </div>
            </div>
            <div class="carousel-item item3">
                <div class="carousel-caption">
                    <h3>
                        Đời Ngắn
                        <span>Đừng  ngủ dài</span>
                    </h3>

                </div>
            </div>
            <div class="carousel-item item4">
                <div class="carousel-caption">
                    <h3>
                        Hãy giết sự trì hoãn
                        <span> Đừng giết thời gian</span>
                    </h3>

                </div>
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>
<!--/model-->
<!--//banner-->
<!--/main-->
<section class="main-content-w3layouts-agileits">
    <div class="container">
        @Html.Action("CreatePost")
        <h3 class="tittle">Danh Sách Bài Viết</h3>
        <div class="inner-sec">
            <!--left-->
            <div class="left-blog-info-w3layouts-agileits text-left">
                <div class="row">
                    @{
                        foreach (var item in Model)
                        {
                            <div class="col-lg-4 card">
                                <a href="@Url.Action("detail","Person",new { @ma = item.id_Entry})">
                                    <img src="@Url.Content("~/Content/images/" + item.UrlImg)" class="card-img-top img-fluid" alt="">
                                </a>
                                <div class="card-body">
                                    <ul class="blog-icons my-4">
                                        <li>
                                            <a href="#">
                                                <i class="far fa-calendar-alt"></i> @item.dates
                                            </a>
                                        </li>
                                        <li class="mx-2">
                                            <a href="@Url.Action("detail","Person",new { @ma = item.id_Entry})">
                                                <i class="far fa-comment"></i> 21
                                            </a>
                                        </li>
                                    </ul>
                                    <h5 class="card-title">
                                        <a href="single.html">@item.Title</a>
                                    </h5>
                                    <p class="card-text mb-3">@item.content1</p>
                                    <a href="@Url.Action("detail","Person",new { @ma = item.id_Entry})" class="btn btn-primary read-m">Chi Tiết</a>
                                </div>
                            </div>
                        }
                    }
                </div>     
                <!--//left-->
            </div>
        </div>
    </div>
</section>
<!--//main-->

